<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CmsShoppingCart</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-topcancel">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">CmsShoppingCart</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @Html.Action("PagesMenuPartial", "Pages");       <!--Menu from DB-->
                </ul>
                <ul class="navbar-collapse collapse navbar-right">
                    <li>@Html.Action("CartPartial", "Cart")</li> <!--Cart Menu from In-Memory-->
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            
            <div class="col-xs-3 col-md-2">
                @Html.Action("CategoryMenuPartial", "Shop")  <!--CategoryMenu from DB-->
            </div>

            @if (ViewBag.Sidebar == "Yes")
            {
                <div class="col-xs-6" col-md-7>
                    @RenderBody()                            <!--RenderBody from the view-->
                </div>
                <div class="col-xs-3" col-md-3>
                    @Html.Action("SidebarPartial", "Pages")  <!--Sidebar from DB-->
                </div>
            }
            else
            {
                <div class="col-xs-9" col-md-10>
                    @RenderBody()
                </div>
            }

        </div>        

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CmsShoppingCart</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
